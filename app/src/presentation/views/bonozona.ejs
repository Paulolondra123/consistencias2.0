<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <meta content="" name="keywords" />
  <meta content="" name="description" />
  <%- include('partials/links/links') %>
</head>

<body>

  <!-- Content Padre Start -->
  <div class="container-fluid position-relative d-flex p-0 padre">
    <%- include('partials/navegacion/sidebar') %>
      <!-- Content Start -->
      <div class="content position-relative bg-white">
        <%- include('partials/navegacion/navbar') %>

          <!-- Chart Start -->
          <div class="container-fluid back-minedu">
            <div class="pt-0 px-4 d-flex" id="chart">
              <div class="row g-4 col-md-12">
                <div class="text-dark rounded pt-4 px-4">
                  <!-- Top div with title and button -->
                  <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0 font-title text-dark">Bono zona</h6>
                  </div>
                  <!-- Responsive Horizontal Form -->
                  <form id="formbuscar">
                    <div class="row ">
                      <div class="col-md-12 mb-3">
                        <div class="">
                          <label for="inputNombre" class="form-label">DISTRITO:</label>
                          <select class="form-select mb-3" id="distrito" required>
                          </select>
                        </div>
                      </div>
                      <div class="d-flex justify-content-between col-md-12">
                        <div class="col-md-5 mb-3">
                          <label for="inputGestion" class="form-label">GESTION:</label>
                          <select type="number" class="form-control bg-claro-gris" id="gestion">
                          </select>
                        </div>
                        <div class="col-md-6 mb-3">
                          <label for="inputApellido" class="form-label">MES:</label>
                          <select class="form-select text-dark" id="mes">
                          </select>
                        </div>
                      </div>
                      <div class="col-md-3 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary text-white ">Buscar</button>
                      </div>
                    </div>
                  </form>
                  <div class="row mb-3">
                    <div class="row mb-3"></div>
                    <div class="col-md-9 mb-3 align-items-end">
                      <label for="nombres" class="form-label">BUSCAR MAESTROS CON BONO ZONA</label>
                      <input type="text" class="form-control col-md-6 bg-claro-gris" placeholder="CODIGO SIE"
                        id="coddis" required>
                    </div>
                    <form id="buscarmaestros" class="col-md-3 mb-3 align-items-end d-flex">
                      <button type="submit" class="btn btn-primary col-md-12 text-white">Buscar</button>
                    </form>
                  </div>
                  <div class="rcol-md-12">
                    <form class=" d-flex gap-1 justify-content-end">
                      <button type="submit" class="btn btn-outline-primary col-md-1" id="imprimir"
                        style="display: none;"><i class="fas fa-file-pdf"></i></button>
                      <button type="submit" class="btn btn-outline-success col-md-1" id="imprimirxls"
                        style="display: none;"><i class="fas fa-file-excel"></i></button>
                    </form>
                  </div>
                </div>
              </div>
              
              
            </div>

            <div class="container-fluid px-4 row g-4">
              <div class="text-center rounded p-4">

                <div class="table-responsive">
                  <table id="myTable"
                    class="bg-white text-dark display table align-middle table-bordered table-hover mb-0">
                    <thead>
                      <tr class="text-white" style="background: #002060;">
                        <th>DISTRITO</th>
                        <th>UNIDADA EDUCATIVA</th>
                        <th>ACCIONES</th>
                      </tr>
                    </thead>
                    <tbody id="medida">

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <%- include('partials/footer/footer') %>
          </div>
          <!-- Chart End -->
      </div>
      <!-- Content End -->
      <!-- Back to Top -->

      <!-- <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a> -->
      
      <!-- Back to Top -->
  </div>
  <!-- Content Padre End -->
  <%- include('partials/scripts/scripts') %>
    <script>
      // JavaScript para mostrar/ocultar el formulario
      document.addEventListener("DOMContentLoaded", function () {
        const btnAgregarUsuario = document.querySelector("#btnAgregarUsuario");
        const formAgregarUsuario = document.querySelector("#myForm");
        const contenidoPadre = document.querySelector(".padre");

        btnAgregarUsuario.addEventListener("click", function (event) {
          event.stopPropagation(); // Detiene la propagación del evento
          formAgregarUsuario.classList.add("visuali"); // Muestra el formulario con animación
          contenidoPadre.classList.add("blur"); // Aplica el efecto de desenfoque al contenedor padre
        });

        formAgregarUsuario.addEventListener("submit", function (event) {
          event.stopPropagation(); // Detiene la propagación del evento
          formAgregarUsuario.classList.remove("visuali"); // Oculta el formulario después de enviarlo
          contenidoPadre.classList.remove("blur"); // Elimina el efecto de desenfoque del contenedor padre
          // Aquí puedes agregar código para manejar el envío del formulario
        });

        window.addEventListener("click", function (event) {
          if (
            !event.target.matches("#btnAgregarUsuario") &&
            !formAgregarUsuario.contains(event.target) &&
            !event.target.closest(".select2-container")
          ) {
            if (formAgregarUsuario.classList.contains("visuali")) {
              formAgregarUsuario.classList.remove("visuali"); // Quita la clase para ocultar el formulario
              contenidoPadre.classList.remove("blur"); // Elimina el efecto de desenfoque del contenedor padre
            }
          }
        });
      });
    </script>
    <script src="/js/bonozona.js"></script>
</body>

</html>